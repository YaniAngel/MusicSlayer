<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#E4000000">

    <ImageView
        android:id="@+id/titleImage"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="9dp"
        android:layout_marginTop="9dp"
        android:layout_marginBottom="9dp"
        android:src="@drawable/title_icon"/>

    <TextView
        android:id="@+id/titleText"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_above="@+id/listView"
        android:layout_alignParentTop="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="9dp"
        android:layout_marginBottom="9dp"
        android:layout_toEndOf="@+id/titleImage"
        android:text="List of Songs"
        android:textSize="30dp"
        android:textColor="@android:color/white"/>

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignRight="@+id/titleText"
        android:layout_marginTop="11dp"
        android:id="@+id/shuffle_button"
        android:text="random"
        android:src="@drawable/baseline_shuffle"/>

    <ListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/titleImage"
        android:layout_alignBaseline="@+id/titleImage"/>
</RelativeLayout>